---
interface Props {
    size?: "600x600" | "500x500" | "400x400";
    src: string;
    alt: string;
}

const { size = "600x600", src, alt } = Astro.props;
---
<div class=`img-container size-${size}`>
    <img src=`${src}` alt=`${alt}`>
</div>

<style lang="scss">
    .img-container {
        display: flex;
        position: relative;
        overflow: hidden;

        &.size-600x600 {
            width: 600px;
            height: 600px;
            border-radius: 1.5rem;
        }

        &.size-500x500 {
            width: 500px;
            height: 500px;
            border-radius: 1.5rem;
        }

        &.size-400x400 {
            width: 400px;
            height: 400px;
            border-radius: 1.25rem;
        }

        img {
            width: 100%;
            height: 100%;
        }
    }
</style>