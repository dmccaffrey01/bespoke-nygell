---
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<section class="flex flex-center height-md">
    <div class="sc flex">
        <div class="img-container pos-relative o-hidden br-150">
            <img src={src} alt={alt}>
            <div class="overlay pos-absolute"></div>
            <div class="text-container flex flex-col align-start gap-150 pos-absolute">
                <h2 class="text text-white text-xl">Give Us A Call Now!</h2>
                <p class="text text-white text-md">
                    Don't hesitate, any questions, find them out with a quick call. <br>
                    Make you're floors something to be proud of - <span class="copy-number">087 333 3333</span>
                </p>
                <a href="/contact" class="btn btn-tertiary btn-sm btn-filled text-white text-sm">
                    Call Us Now
                </a>
            </div>
        </div>
    </div>
</section>

<style lang="scss">
    .img-container {
        width: 100%;
        height: 444px;

        .overlay {
            background: linear-gradient(to right, rgba(0, 0, 0, 0.9), rgba(255, 255, 255, 0));
            left: 0;
            top: 0;
        }
    }

    .text-container {
        left: 5rem;
        top: 50%;
        translate: 0 -50%;
        z-index: 1000;
    }
</style>